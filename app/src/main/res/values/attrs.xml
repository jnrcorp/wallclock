<resources>

    <attr name="textColor" format="color" />
    <attr name="iconSizeMultiplier" format="integer" />
    <attr name="temperatureTextSize" format="dimension" />
    <attr name="dayOfWeekTextSize" format="dimension" />

    <attr name="openWeatherMapApiKey" format="string" />
    <attr name="timeInterval" format="enum">
        <enum name="every3hours" value="1" />
        <enum name="every6hours" value="2" />
        <enum name="every12hours" value="4" />
        <enum name="every24hours" value="8" />
    </attr>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="WeatherDayView">
        <attr name="temperature" format="integer" />
        <attr name="weatherIcon" format="integer" />
        <attr name="dayOfWeek" format="string" />
        <attr name="textColor" />
        <attr name="iconSizeMultiplier" />
        <attr name="temperatureTextSize" />
        <attr name="dayOfWeekTextSize" />
    </declare-styleable>

    <declare-styleable name="WeatherCurrentView">
        <attr name="textColor" />
        <attr name="iconSizeMultiplier" />
        <attr name="temperatureTextSize" />
        <attr name="openWeatherMapApiKey" />
        <attr name="timeInterval" />
    </declare-styleable>
    
    <declare-styleable name="WeatherForecastView">
        <attr name="scrollOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="openWeatherMapApiKey" />
        <attr name="timeInterval" />
        <attr name="textColor" />
        <attr name="iconSizeMultiplier" />
        <attr name="temperatureTextSize" />
        <attr name="dayOfWeekTextSize" />
    </declare-styleable>

</resources>
