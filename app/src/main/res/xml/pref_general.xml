<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_key_api_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/pref_openweathermap_api_key_description"
        android:title="@string/pref_openweathermap_api_key" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <!-- NOTE: https://github.com/jaredrummler/ColorPicker -->
    <com.jaredrummler.android.colorpicker.ColorPreference
        android:defaultValue="@color/default_background_color"
        android:key="@string/pref_key_background_color"
        android:summary="@string/pref_background_color_description"
        android:title="@string/pref_background_color" />

    <com.jaredrummler.android.colorpicker.ColorPreference
        android:defaultValue="@color/default_text_color"
        android:key="@string/pref_key_text_color"
        android:summary="@string/pref_text_color_description"
        android:title="@string/pref_text_color"/>

    <ListPreference
        android:defaultValue="@string/default_font_size_clock_time"
        android:entries="@array/pref_font_size_values"
        android:entryValues="@array/pref_font_size_values"
        android:key="@string/pref_key_font_size_time"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_font_size_clock_time" />

    <ListPreference
        android:defaultValue="@string/default_font_size_clock_date"
        android:entries="@array/pref_font_size_values"
        android:entryValues="@array/pref_font_size_values"
        android:key="@string/pref_key_font_size_date"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_font_size_clock_date" />

    <ListPreference
        android:defaultValue="@string/default_font_size_weather_temp"
        android:entries="@array/pref_font_size_values"
        android:entryValues="@array/pref_font_size_values"
        android:key="@string/pref_key_font_size_weather_temp"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_font_size_weather_temp" />

    <ListPreference
        android:defaultValue="@string/default_font_size_weather_time"
        android:entries="@array/pref_font_size_values"
        android:entryValues="@array/pref_font_size_values"
        android:key="@string/pref_key_font_size_weather_time"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_font_size_weather_time" />

    <ListPreference
        android:defaultValue="@string/default_icon_size_weather"
        android:entries="@array/pref_weather_icon_size_display"
        android:entryValues="@array/pref_weather_icon_size_values"
        android:key="@string/pref_key_icon_size"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_icon_size_weather" />

    <ListPreference
        android:defaultValue="@string/default_time_interval_weather"
        android:entries="@array/pref_weather_time_interval_display"
        android:entryValues="@array/pref_weather_time_interval_values"
        android:key="@string/pref_key_weather_time_interval"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_time_interval_weather" />

    <ListPreference
        android:defaultValue="@string/default_forecast_days"
        android:entries="@array/pref_forecast_days_valuess"
        android:entryValues="@array/pref_forecast_days_valuess"
        android:key="@string/pref_key_forecast_days"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_forecast_days"
        android:summary="@string/pref_forecast_days_description"/>

    <ListPreference
        android:defaultValue="@string/default_manage_brightness"
        android:entries="@array/pref_manage_brightness_display"
        android:entryValues="@array/pref_manage_brightness_values"
        android:key="@string/pref_key_manage_brightness"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_manage_brightness"
        android:summary="@string/pref_manage_brightness_description"/>

</PreferenceScreen>
